
{% macro hmpoCookieBanner(params) %}
<div class="hmpo-cookie-banner js-cookie-banner{%- if params.classes %} {{ params.classes }}{% endif %}"{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
    <p class="hmpo-cookie-banner__message">{{ params.html | safe if params.html else params.text }}</p>
</div>
{% endmacro %}
