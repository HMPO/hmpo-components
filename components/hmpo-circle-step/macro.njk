
{% macro hmpoCircleStep(params) %}
<li {% if params.classes %}class="{{ params.classes }}"{% endif %}{% for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
    <span class="circle-step{%- if params.classes %} {{ params.circleClasses }}{% endif %}">{{ params.number }}</span>
    {% if params.title %}<h2>{{ params.title }}</h2>{% endif %}<p>{{ params.html | safe if params.html else params.text }}</p>
</li>
{% endmacro %}
